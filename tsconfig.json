{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES2020", "dom"],
    "target": "ES2020",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "outFile": "lib/index.js",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}
